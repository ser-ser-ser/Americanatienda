{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "TS-Node: Current File",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "ts-node",
                "-r",
                "dotenv/config"
            ],
            "args": [
                "${file}"
            ],
            "cwd": "${workspaceFolder}",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "smartStep": true
        },
        {
            "name": "Next.js: Debug Server-side",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run dev"
        }
    ]
}